	<!--- Wash -->
	<model>
		<name>wash_l</name>
		<path>Aircraft/Harrier-GR1/Models/Effects/Wash.xml</path>
		<condition>
			<equals>
				<property>controls/state/low_level</property>
				<value>1</value>
			</equals>
		</condition>
		<offsets>
			<x-m>25.00</x-m>
			<y-m>4.50 </y-m>
			<z-m>0.00</z-m>
			<pitch-deg>0</pitch-deg>
