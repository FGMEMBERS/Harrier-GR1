			<opt><name>ADEN 30mm Cannon</name><lbs>192</lbs></opt>
		</weight>

		<weight n="5">
			<name>Right Inboard</name>
			<tank>2</tank>
			<weight-lb>0</weight-lb>
			<selected>none</selected>
			<opt><name>none</name><lbs>0</lbs></opt>
