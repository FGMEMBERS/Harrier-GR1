			</generic>
		</multiplay>

	</sim>

	<!-- Fuel Settings -->
	<consumables>
		<fuel>
			<tank n="0">
				<tank-num type="int">0</tank-num>
				<level-gal_us archive="y">756</level-gal_us>
			</tank>
			<tank n="1">
				<tank-num type="int">1</tank-num>
				<level-gal_us archive="y">120</level-gal_us>
			</tank>
			<tank n="2">
				<tank-num type="int">2</tank-num>
				<level-gal_us archive="y">120</level-gal_us>
			</tank>
		</fuel>
	</consumables>



	<!-- Keyboard Shortcuts -->
	<input>
		<keyboard>

			<key n="99">
				<name>c</name>
				<desc>Toggle Canopy</desc>
				<binding>
					<command>nasal</command>
					<script>Canopy.canopy_switch(2)</script>
				</binding>
			</key>

			<key n="101">
				<name>e</name>
				<desc>Fire rockets</desc>
				<binding>
					<command>nasal</command>
					<script>guns.fire_Rocket()</script>
				</binding>
				<mod-up>
					<binding>
						<command>nasal</command>
						<script>guns.stop_Rocket()</script>
					</binding>
				</mod-up>
			</key>

			<key n="102">
				<name>f</name>
				<desc>Fire gun</desc>
				<binding>
					<command>property-assign</command>
					<property>controls/armament/trigger</property>
					<value>true</value>
				</binding>
				<mod-up>
					<binding>
						<command>property-assign</command>
						<property>controls/armament/trigger</property>
						<value>false</value>
					</binding>
				</mod-up>
			</key>

			<key n="104">
				<name>h</name>
				<desc>Toggle HUD</desc>
				<binding>
					<command>property-toggle</command>
					<property>sim/hud/visibility[1]</property>
				</binding>
			</key>

			<key n="113">
				<name>q</name>
				<desc>Deploy countermeasures</desc>
				<binding>
					<command>nasal</command>
					<script>guns.fire_FL()</script>
				</binding>
				<mod-up>
					<binding>
						<command>nasal</command>
						<script>guns.stop_FL()</script>
					</binding>
				</mod-up>
			</key>

			<key n="125">
				<name>}</name>
				<desc>Engine Autostart</desc>
				<binding>
					<command>nasal</command>
					<script>engines.engine1.autostart();</script>
				</binding>
			</key>

		</keyboard>
	</input>

