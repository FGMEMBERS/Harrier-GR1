<?xml version="1.0"?>

<!-- by Petar jedvaj -->

<PropertyList>

<path>Sensors.ac</path>

<animation> 
<type>select</type>
<object-name>Airbrake</object-name>
<condition>
<equals>
<property>surface-positions/speedbrake-pos-norm/</property>
<value>true</value>
</equals>
</condition>
</animation>

<animation> 
<type>material</type>
<object-name>Airbrake2</object-name>
<emission> 
<red>0</red>
<green>1</green>
<blue>0</blue>
</emission>
</animation>

<animation> 
<type>select</type>
<object-name>Oxygen</object-name>
<condition>
<equals>
<property>canopy/position-norm/</property>
<value>true</value>
</equals>
</condition>
</animation>

<animation> 
<type>material</type>
<object-name>Oxygen2</object-name>
<emission> 
<red>1</red>
<green>0</green>
<blue>0</blue>
</emission>
</animation>

<animation>
<type>range</type>
<min-m>0</min-m>
<max-m>5</max-m>
</animation>

</PropertyList>

